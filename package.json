{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "base setup for React app",
  "main": "dist/index.js",
  "scripts": {
    "babel-node": "babel-node",
    "build": "npm run clean && npm run webpack -- -p --env production && babel src --out-dir dist --source-maps inline",
    "clean": "rimraf build dist",
    "eslint": "eslint",
    "nodemon": "nodemon",
    "postinstall": "npm run build",
    "start-dev-server": "node ./dist/index.js",
    "start": "npm run nodemon -- --watch src --ext '.js' --exec npm run start-dev-server",
    "test": "npm run eslint",
    "webpack": "webpack"
  },
  "keywords": [
    "react",
    "jest",
    "webpack",
    "babel",
    "eslint",
    "postcss"
  ],
  "author": "Kirill Vishenkov <vishkir1991@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vishenkov/react-boilerplate.git"
  },
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "nodemon": "^1.12.1",
    "postcss-loader": "^2.0.8",
    "precss": "^2.0.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "koa": "^2.3.0",
    "koa-static": "^4.0.1",
    "koa-webpack": "^1.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
}
